using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows;
using System.Windows.Controls;
using System.Windows.Data;
using System.Windows.Documents;
using System.Windows.Input;
using System.Windows.Media;
using System.Windows.Media.Animation;
using System.Windows.Media.Imaging;
using System.Windows.Navigation;
using System.Windows.Shapes;

namespace WpfApp2
{
    /// <summary>
    /// Логика взаимодействия для MainWindow.xaml
    /// </summary>
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
            LoginTextBox.Text = "123";
            PasswordBox.Password = "123";
            ProductComboBox.SelectedIndex = 0;
        }

        private async void LoginButton_Click(object sender, RoutedEventArgs e)
        {
            string login = LoginTextBox.Text;
            string password = PasswordBox.Password;
            if (login == "123" && password == "123")
            {
                await FadeOut(LoginPanel);
                LoadingPanel.Visibility = Visibility.Visible;
                await FadeIn(LoadingPanel);
                await Task.Delay(1500); // имитация загрузки
                await FadeOut(LoadingPanel);
                LoadingPanel.Visibility = Visibility.Collapsed;
                MainPanel.Visibility = Visibility.Visible;
                await FadeIn(MainPanel);
            }
            else
            {
                MessageBox.Show("Неверный логин или пароль!", "Ошибка", MessageBoxButton.OK, MessageBoxImage.Error);
            }
        }

        private void InjectButton_Click(object sender, RoutedEventArgs e)
        {
            string product = (ProductComboBox.SelectedItem as ComboBoxItem)?.Content.ToString();
            LogTextBox.Text += "[INFO] Инжект выполнен!\n";
        }

        private void UpdateLogButton_Click(object sender, RoutedEventArgs e)
        {
            LogTextBox.Text += "[UPDATE] Лог обновлен: продукт CS2 актуален.\n";
        }

        private async Task FadeIn(UIElement element)
        {
            var sb = (Storyboard)FindResource("FadeInStoryboard");
            element.Opacity = 0;
            sb.Begin(element);
            await Task.Delay(500);
            element.Opacity = 1;
        }

        private async Task FadeOut(UIElement element)
        {
            var sb = (Storyboard)FindResource("FadeOutStoryboard");
            sb.Begin(element);
            await Task.Delay(500);
            element.Opacity = 0;
            element.Visibility = Visibility.Collapsed;
        }
    }
}
